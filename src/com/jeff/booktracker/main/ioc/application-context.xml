<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   					   http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="applicationInitializer" class="com.jeff.booktracker.lifecycle.ApplicationInitializer">
		<constructor-arg index="0" ref="databaseManager" />
		<constructor-arg index="1" ref="guiInitializer" />
	</bean>

	<bean id="databaseManager" class="com.jeff.booktracker.db.DatabaseManager" />

	<bean id="guiInitializer" class="com.jeff.booktracker.lifecycle.ui.GUIInitializer">
		<constructor-arg index="0" ref="mainFrame" />
		<constructor-arg index="1" ref="bookTrackerMainPanel" />
	</bean>

	<bean id="bookTrackerMainPanel" class="com.jeff.booktracker.ui.BookTrackerMainPanel">
		<constructor-arg index="0" ref="bookshelfPanel" />
	</bean>

	<bean id="bookshelfPanel" class="com.jeff.booktracker.bookshelf.ui.BookshelfPanel">
		<constructor-arg index="0" ref="bookshelfTableModel" />
		<constructor-arg index="1" ref="bookshelfActionPanel" />
	</bean>

	<bean id="bookshelfTableModel"
		class="com.jeff.booktracker.bookshelf.ui.table.model.BookshelfTableModel" />

	<bean id="bookshelfActionPanel" class="com.jeff.booktracker.bookshelf.ui.BookshelfActionPanel">
		<constructor-arg index="0" ref="mainFrame" />
		<constructor-arg index="1" ref="addBookDialog" />
	</bean>

	<bean id="mainFrame" class="javax.swing.JFrame">
	<constructor-arg index="0">
		<value>Book Tracker</value>
	</constructor-arg>
	</bean>

	<bean id="addBookDialog" class="com.jeff.booktracker.bookshelf.ui.add.AddBookDialog">
		<constructor-arg index="0" ref="mainFrame" />
		<constructor-arg index="1" ref="addBookPanel" />
	</bean>

	<bean id="addBookPanel" class="com.jeff.booktracker.bookshelf.ui.add.AddBookPanel"></bean>

</beans>
